<%- model_class = Incident -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:school_id) %>:</strong></dt>
  <dd><%= @incident.school_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:description) %>:</strong></dt>
  <dd><%= @incident.description %></dd>
  <dt><strong><%= model_class.human_attribute_name(:incident_type) %>:</strong></dt>
  <dd><%= @incident.incident_type %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @incident.user_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:people_involved) %>:</strong></dt>
  <dd><%= @incident.people_involved %></dd>
  <dt><strong><%= model_class.human_attribute_name(:other_observers) %>:</strong></dt>
  <dd><%= @incident.other_observers %></dd>
  <dt><strong><%= model_class.human_attribute_name(:date_time) %>:</strong></dt>
  <dd><%= @incident.date_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:location) %>:</strong></dt>
  <dd><%= @incident.location %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              incidents_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_incident_path(@incident), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              incident_path(@incident),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
